}

.nav-arrow {
  font-size: 32rpx;
  color: #D9EAFF;
  font-weight: bold;
}

/* 底部操作按钮 */
.bottom-actions {
  padding: 32rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 1;
}

.btn-generate {
  width: 100%;
  height: 96rpx;
  background-image: conic-gradient(from 90deg at 50% 50%, #FDE7ED 0deg, #D9EAFF 215deg, #F5E8F1 326deg, #FDE7ED 360deg);
  background-color: #FDE7ED;
  box-shadow: 0 8rpx 8rpx rgba(0,0,0,.25);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-generate:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,.25);
}

.btn-generate.generating {
  opacity: 0.8;
  pointer-events: none;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

/* 星星迸发动画 */
.star-burst-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 5;
  overflow: hidden;
}

.star {
  position: absolute;
  font-size: 24rpx;
  color: #FFD700;
  opacity: 0;
  pointer-events: none;
  z-index: 6;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

