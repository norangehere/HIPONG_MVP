page { 
  background: #fff; 
  font-family: 'PingFang SC', sans-serif;
}
.page {
  display: flex;
  flex-direction: column;
  height: 100vh; /* <-- 核心修改：从 min-height 改为 height */
  overflow: hidden; /* <-- 增加这个，确保只有 scroll-view 滚动 */
  background: #fff;
  position: relative;
}

/* 2. 滑动容器：这个保持不变，您的设置是正确的 */
.swipe-container {
  flex: 1; /* 占据所有剩余空间 */
  min-height: 0; /* flex 布局的防溢出技巧 */
  position: relative;
}

/* 3. Swiper 和 Swiper-item：确保它们的高度是100%，并且【没有任何 min-height】 */
.swiper, swiper-item {
  height: 100%;
}

/* 4. 【重要】Scroll-view 的样式：这是让内容滚动的关键 */
.step-content-scrollable {
  height: 100%;
  box-sizing: border-box;
}

/* 5. 内容块：【移除 justify-content: center】，让内容从顶部开始自然排列 */
.step-content {
  padding: 40rpx 80rpx; /* 可以适当增加上下 padding */
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 确保这里没有 min-height 和 justify-content: center */
  justify-content: flex-start; /* 让内容从顶部开始排列 */
}



/* 列表标题："已添加 (X人)" */
.partner-list-title {
  font-size: 32rpx;
  font-weight: 600; /* 使用 600 来表示中等粗细 */
  color: #333333;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eeeeee; /* 使用更柔和的灰色分割线 */
  margin-top: 40rpx; /* 与上方元素保持一些间距 */
  margin-bottom: 10rpx;
}

/* 列表的整体容器 */
.partner-list {
  width: 100%;
}

/* 列表中的每一个同行者项目 */
.partner-item {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0; /* 项目之间的分割线 */
  transition: background-color 0.2s; /* 添加一个背景色过渡效果 */
}

/* 当列表项被按下时的效果 (可选，提升体验) */
.partner-item:active {
  background-color: #fafafa;
}

/* 昵称输入框 */
.partner-name-input {
  /* 尺寸和边距 */
  flex: 1.5; /* 分配 1.5 份空间 */
  min-width: 0; /* 防止内容撑开 */
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 16rpx;
  margin-right: 20rpx;

  /* 字体 */
  font-size: 28rpx;
  color: #333;

  /* 背景和边框 */
  background-color: #f7f7f7;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  
  /* 过渡效果 */
  transition: border-color 0.2s, box-shadow 0.2s;
}

/* 输入框获得焦点时的效果 */
.partner-name-input:focus {
  border-color: #007aff; /* 使用主题蓝色 */
  background-color: #fff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1); /* 添加一个柔和的光晕效果 */
}

/* 同行者地址文本 */
.partner-address {
  /* 尺寸和边距 */
  flex: 3; /* 分配 3 份空间，让地址有更多位置 */
  min-width: 0; /* 防止内容撑开 */
  margin-right: 20rpx;

  /* 字体 */
  font-size: 26rpx;
  color: #888888; /* 使用较深的灰色，易于阅读 */
  line-height: 1.4;

  /* 文本溢出处理 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; /* 强制不换行 */
}

/* 删除按钮 (这里我采用了之前推荐的【方案二：柔和胶囊样式】，因为它和输入框很搭) */
.delete-btn {
  /* 尺寸和边距 */
  height: 52rpx;
  line-height: 52rpx; /* 让文字垂直居中 */
  padding: 0 24rpx;
  margin: 0;
  
  /* 字体 */
  font-size: 24rpx;
  font-weight: normal;

  /* 背景和边框 */
  background-color: #fff;
  border: 1rpx solid #e54d42; /* 主题红色边框 */
  border-radius: 26rpx; /* 高度的一半，形成胶囊形状 */

  /* 颜色 */
  color: #e54d42; /* 主题红色文字 */

  /* 去除按钮默认样式 */
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  
  /* 动画过渡 */
  transition: all 0.2s ease-in-out;
}
